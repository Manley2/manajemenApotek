pipeline {
  agent any

  environment {
    IMAGE_NAME = 'manley2/pipeline_laravel'          // nama image di Docker Hub
    REGISTRY_CREDENTIALS = 'dockerhub-credentials'   // ID credential Docker Hub di Jenkins
  }

  stages {

    stage('Checkout') {
      steps {
        echo 'Checkout source code...'
        checkout scm
      }
    }

    stage('Build') {
      steps {
        sh 'echo "Mulai build aplikasi (Linux)"'
        // Jalankan composer install (kalau butuh)
        sh '''
          if [ -f composer.json ]; then
            echo "Menjalankan composer install..."
            composer install --no-interaction --prefer-dist --optimize-autoloader
          else
            echo "composer.json tidak ditemukan, skip composer install"
          fi
        '''
      }
    }

    stage('Build Docker Image') {
      steps {
        withCredentials([usernamePassword(credentialsId: env.REGISTRY_CREDENTIALS, usernameVariable: 'USER', passwordVariable: 'PASS')]) {
          sh '''
            echo "Login Docker sebelum build..."
            echo "$PASS" | docker login -u "$USER" --password-stdin
            docker build -t ${IMAGE_NAME}:${BUILD_NUMBER} .
            docker logout
          '''
        }
      }
    }

    stage('Push Docker Image') {
      steps {
        withCredentials([usernamePassword(credentialsId: env.REGISTRY_CREDENTIALS, usernameVariable: 'USER', passwordVariable: 'PASS')]) {
          sh '''
            echo "Login Docker untuk push..."
            echo "$PASS" | docker login -u "$USER" --password-stdin
            docker push ${IMAGE_NAME}:${BUILD_NUMBER}
            docker tag ${IMAGE_NAME}:${BUILD_NUMBER} ${IMAGE_NAME}:latest
            docker push ${IMAGE_NAME}:latest
            docker logout
          '''
        }
      }
    }
  }

  post {
    always {
      echo 'Selesai build pipeline.'
    }
  }
}
