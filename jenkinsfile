pipeline {
    agent {
        docker {
            image 'composer:2'          // Gunakan image composer yang sudah ada PHP & Composer
            args '-u root'              // Jalankan sebagai root agar bisa akses filesystem
        }
    }

    environment {
        DOCKER_IMAGE = "manley2/manajemenapotek"   // ganti dengan nama repo Docker Hub kamu
        DOCKER_TAG = "latest"                      // bisa juga pakai "${BUILD_NUMBER}" kalau mau versi unik
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Manley2/manajemenApotek.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                echo "📦 Menjalankan composer install..."
                composer install --no-interaction --prefer-dist --optimize-autoloader
                '''
            }
        }

        stage('Run Laravel Tests') {
            steps {
                sh '''
                echo "🧪 Menjalankan test Laravel..."
                php artisan key:generate
                php artisan migrate --force || echo "Lewati migrasi jika database belum tersedia"
                php artisan test || echo "Lewati test jika belum dikonfigurasi"
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                echo "🐳 Membuat Docker image..."
                docker build -t $DOCKER_IMAGE:$DOCKER_TAG .
                '''
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                    echo "🔑 Login ke Docker Hub..."
                    echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin

                    echo "🚀 Push image ke Docker Hub..."
                    docker push $DOCKER_IMAGE:$DOCKER_TAG

                    docker logout
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline berhasil! Docker image telah dikirim ke Docker Hub."
        }
        failure {
            echo "❌ Pipeline gagal! Cek log error di tahap sebelumnya."
        }
    }
}
